package youtube;

import java.util.Scanner;

public class MySweetProgram {

	public static void main(String[] args) { //methods
		
		System.out.println("what is your name?");
		
		//System.out.println("hello" + args[0]); -- using arguments
		
		
		//type identifier = new type()
		Scanner scanner = new Scanner(System.in);
		String name = scanner.nextLine();
		
		System.out.println("hello" + name);
		
		
		var x = new MySweetProgram(); // creating an object
		x.tacos();

	}
	
	public void tacos() {
		System.out.println("Tacos!");
	}
	String x = new String("hello"); //property -- stores a value
	
// class - contains everything - has members
//methods - do somrething (also functions)
//properties - store something
//statements -- telling the computer something
//arguments -- what you pass to a method (calling)
//parameter  -- variables to store arguments (definition)
//access modifier(public) -- who can use?
//static - no oinstnace of class is needed
//object - instnace of a class

}
